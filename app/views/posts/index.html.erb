<div class="container">

	<div class="container">

	<div class="page-header">
		<h1>Index <small>(<%= @posts.count %>)</small></h1>
			
	</div>

	<ul class="list-group">
		<% @posts.each do |post| %>
			<li class="list-group-item">
				<%= link_to(post.title, post) %> - <%= post.lead %> <span class="badge"><%= post.view_count %></span></li> 
		<% end %>
	</ul>

	<a class="btn btn-primary" href="/posts/new" role="button">Create a New Post</a>
</div>