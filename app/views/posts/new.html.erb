<div class="container">

	<div class="page-header">
		<h1>Create a New Post</h1>
	</div>

	<div class="row">
		<div class="col-lg-6">

<%=form_tag '/posts' do %>
<div class="input-group">
	<label for="title">Title:</label>
		<input type="text" class="form-control" id="title" placeholder="Blog Title" name="title">
</div>
<div class="input-group">
	<label for="author">Author:</label>
		<input type="text" class="form-control" id="author" placeholder="Author" name="author">
</div>
<div class="input-group">
	<label for="category">Category:</label>
		<input type="text" class="form-control" id="category" placeholder="Category" name="category">
</div>
<div class="input-group">
	<label for="content">Content:</label>
		<input type="text" class="form-control" id="content" placeholder="Content" name="content">
</div>

	<button type="submit" class="btn btn-primary">Submit</button>

<% end %>
		</div>
	</div>
</div>

